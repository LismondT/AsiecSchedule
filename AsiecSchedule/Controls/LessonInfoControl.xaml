<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:AsiecSchedule.Models"
             x:Class="AsiecSchedule.Controls.LessonInfoControl">

    <Frame BackgroundColor="{StaticResource PrimaryDark}"
           BorderColor="Transparent">

        <StackLayout x:Name="LessonStackLayout"
                     x:DataType="models:LessonModel">

            <Label Text="{Binding DateTitle}"
                   HorizontalOptions="Center"
                   FontAttributes="Bold" />

            <Label Text="{Binding NameTitle}" />

            <Label Text="{Binding TeacherTitle}" />

        </StackLayout>

    </Frame>

</ContentView>